{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "spec": {
    "class": false,
    "component": true,
    "module": false,
    "service": true
  },
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "mail/templates/**/*",
        "watchAssets": true
      },
      {
        "include": "protos/**/*.proto",
        "watchAssets": true
      },
      {
        "include": "shared/grpc/protos/**/*.proto",
        "watchAssets": true
      },
      {
        "include": "certs/*",
        "watchAssets": true
      }
    ]
  }
}
